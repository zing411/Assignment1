html
  head   
    title Form for Open Courses
  body
    form(action="/submit", method="POST")
      label(for="id") ID:
      input(type="text", id="id", name="id", placeholder="Enter your student ID", required)
    
      label(for="Name") Name:
      input(type="text", id="Name", name="Name", placeholder="Enter your Name", required)
    
      label(for="Department") Department:
      input(type="text", id="Department", name="Department", placeholder="Enter Department", required)
    
      label(for="onGoing") Course:
      textarea(id="onGoing", name="Enrolled", placeholder="Enter Open Course", required)
    
      input(type="submit", value="Submit")

    hr
    each course in ongoingCourses
      h5 
        if course.seats === 0
          | #{course.name} - No seats left
        else
          | #{course.name} - #{course.seats} seats left



